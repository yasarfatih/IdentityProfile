<div class="respond-form" id="respond">
    <div class="respond-comment">
        Leave a <span>Comment</span>
    </div>
    @if (string.IsNullOrEmpty(User.Identity.Name))
    {
        <h5>Yorum yapabilmek için giriş yapmanız gerekmektedir</h5>
    }
    else
    {
        <form class="form-gray-fields">

            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="upper" for="comment">Your comment</label>
                        <textarea class="form-control required" name="comment" rows="9" placeholder="Enter comment" id="comment" aria-required="true"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group text-center">
                        <button class="btn" id="add-comment" type="submit">Submit Comment</button>
                    </div>
                </div>
            </div>
        </form>
    }
</div>
